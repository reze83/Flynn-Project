{
  "name": "flynn-project",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "build:prod": "pnpm -r build -- --project tsconfig.prod.json",
    "dev": "pnpm -r --parallel dev",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "typecheck": "pnpm -r typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "bootstrap": "pnpm --filter @flynn/bootstrap start",
    "install:local": "bash ./scripts/install-with-fallback.sh",
    "build:bundle": "pnpm -r bundle",
    "build:release": "pnpm run build && pnpm run build:bundle"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/node": "^22.0.0",
    "pino-pretty": "^13.1.3",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0",
    "tsup": "^8.0.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "overrides": {
      "zod": "^4.0.0",
      "jsondiffpatch": ">=0.7.2",
      "ai": ">=5.0.52",
      "esbuild": ">=0.25.0"
    }
  }
}
